{{> menu active="updateUser" }}

<div class="columns">
  <div class="column is-two-thirds">
    <section class="section">
    
      <h1 class="title">Hello {{user.firstName}} Edit User Details</h1>
      <h2>Edit User Details</h2>
     <form class="box"  action="/user/{{user._id}}updateuser/{{user._id}}" method="POST">
        <label class="label">Name</label>
        <div class="field is-horizontal">
          <div class="field-body">
            <div class="field">
              <input class="input" type="text" placeholder="{{user.firstName}}" name="firstName">
            </div>
            <div class="field">
              <input class="input" type="text" placeholder="{{user.lastName}}" name="lastName">
            </div>
          </div>
        </div>
        <div class="field">
          <label class="label">Email</label> <input class="input" type="text" placeholder="{{user.email}}" name="email">
        </div>
        <div class="field">
          <label class="label">Password</label> <input class="input" type="password" placeholder="{{user.password}}" name="password">
        </div>
        <br>
        <div class="field is-grouped">
          <button class="button is-link">Submit</button> 
        </div>
      </form>
    </section>
  </div>
</div>